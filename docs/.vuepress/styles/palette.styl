}

// color
.color-wrapper {
  display: flex;
  flex-wrap: wrap;
  .color-group {
    width: 46%;
    margin: 20px 2%;
    .color-header {
      height: 60px;
      line-height: 60px;
      font-size: 24px;
      font-weight: 600;
      padding-left: 10px;
    }
    .color-item {
      height: 40px;
      line-height: 40px;
      font-size: 16px;
      padding: 0 10px;
      display: flex;
      justify-content: space-between;
      align-item: center;
    }
  }
}